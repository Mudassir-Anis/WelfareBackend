@model AlifSani.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Frontend/admin/LoginStyle.css" rel="stylesheet" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title> Admin Login</title>

</head>
<body>
    <div class="sidenav">
        <div class="login-main-text">
            <h2>
                Mujaddid Alif Sani
                <br>
                <br /> Admin Login Page
            </h2>
            <p>Login from here to access.</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "adminformlogin", name = "adminformlogin", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" name="UserName" class="form-control" placeholder="User Name">
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger mt-2" })
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="Password" class="form-control" placeholder="Password">
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger mt-2" })
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mt-2" })

                    </div>
                    <button type="submit" class="btn btn-black">Login</button>
                }

            </div>
        </div>
    </div>
</body>
</html>
